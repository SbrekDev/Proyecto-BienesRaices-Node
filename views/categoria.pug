extends ./layout/app

block contenido
    
        section(class="pt-5")
            h2(class="text-center text-4xl font-bold pt-10")= pagina

            if propiedades.length
                div(class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 mt-14")
                    each propiedad in propiedades
                        div(class="bg-white shadow rounded-lg")
                            img(class="object-cover h-72 w-full" src=`/uploads/${propiedad.imagen}` alt=`imagen casa ${propiedad.titulo}`)
                            div(class="p-5 space-y-3")
                                h3(class="text-2xl font-bold")= propiedad.titulo
                                p(class="text-gray-600") Habitaciones: 
                                    span(class="text-gray-800 font-bold")= propiedad.habitaciones
                                p(class="text-gray-600") Ba√±os: 
                                    span(class="text-gray-800 font-bold")= propiedad.wc
                                p(class="text-gray-600") Precio: 
                                    span(class="text-green-600 font-bold")= propiedad.precio.nombre
                                a(href=`/propiedad/${propiedad.id}` class="bg-indigo-600 w-full text-center font-bold p-2 block uppercase text-white rounded-md") Ver Propiedad
            else 
                p(class="text-center text-gray-800 py-10") No hay Resultados