extends ../layout/index

block contenido 
    .py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method="POST" action="/auth/olvide-password" noValidate).space-y-5
                    input(type="hidden" name='_csrf' value=csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Tu email
                        input#email.w-full.px-3.py-2.border.border-gray-.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email")

                    
                    .flex.items-center.justify-between 
                        a.text-gray-500(href="/auth/registro") Crear cuenta
                        a.text-gray-500(href="/auth/login") Ya tienes cuenta? Inicia Sesi√≥n

                    input(type="submit" class="w-full bg-indigo-600 text-white hover:bg-indigo-500 transition-colors p-2 rounded-md cursor-pointer font-bold" value="Enviar Instrucciones")

                        